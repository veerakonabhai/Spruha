<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.veerareddykonabhai.spruha.termlist">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TERMS OF DONOR"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/text_term"/>
    <TextView
        android:id="@+id/rule1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Age should be between 18-60"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/text_term"
        />
    <TextView
        android:id="@+id/rule2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Weight is more than 45Kg"
        android:layout_below="@id/rule1"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/rule3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Haemoglobin should be minimum 12.5 gm"
        android:layout_below="@id/rule2"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/rule4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Last blood donation was 3 or more months earlier"
        android:layout_below="@id/rule3"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/rule5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Donor should not have consumed alcohol in the past 24hrs"
        android:layout_below="@id/rule4"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/rule6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Should not have cold/fever in the past 1 week"
        android:layout_below="@id/rule5"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to the above terms"
        android:id="@+id/checkterm"
        android:layout_alignParentBottom="true"
        android:onClick="clicked"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />


</RelativeLayout>
